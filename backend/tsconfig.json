{
  "compilerOptions": {
    "lib": ["es2023"],
    "target": "es2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "composite": true
  },
  "include": ["global.d.ts", "src/**/*", "src/**/*.json", "package.json", "package-lock.json", "test/**/*"]
}
